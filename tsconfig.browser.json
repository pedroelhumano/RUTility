{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "lib": ["dom", "es5"],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "./dist-browser",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "es5"
  },
  "exclude": ["node_modules", "dist", "test"],
  "include": ["src/**/*.ts"]
}
